<UserControl x:Class="CapaPresentacion_WPF.Vistas.VistaUsuarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000" Background="Transparent">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,20,0" VerticalAlignment="Top" Padding="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="3" Color="#EAEAEA"/>
            </Border.Effect>

            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                    <TextBlock Text="👤" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Gestión de Usuarios" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Nombre Completo" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                <TextBox Text="{Binding NombreCompletoForm}" Height="40" VerticalContentAlignment="Center" Padding="10" 
                         Background="#F5F6FA" BorderBrush="#DCDDE1" BorderThickness="1" Margin="0,0,0,15"/>

                <TextBlock Text="Correo Electrónico" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                <TextBox Text="{Binding CorreoForm}" Height="40" VerticalContentAlignment="Center" Padding="10"
                         Background="#F5F6FA" BorderBrush="#DCDDE1" BorderThickness="1" Margin="0,0,0,15"/>

                <TextBlock Text="Contraseña" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                <TextBox Text="{Binding ClaveForm}" Height="40" VerticalContentAlignment="Center" Padding="10"
                         Background="#F5F6FA" BorderBrush="#DCDDE1" BorderThickness="1" Margin="0,0,0,5"/>
                <TextBlock Text="*Dejar vacío para no cambiar" FontSize="11" Foreground="#BDC3C7" Margin="0,0,0,20"/>

                <TextBlock Text="Rol Asignado" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding ListaRoles}" SelectedItem="{Binding RolForm}" Height="40" Padding="10" Margin="0,0,0,30" VerticalContentAlignment="Center"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Command="{Binding GuardarCommand}" Content="Guardar" 
                            Height="40" Background="#27AE60" Foreground="White" FontWeight="Bold" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2ECC71"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" Command="{Binding LimpiarFormularioCommand}" Content="Limpiar" 
                            Height="40" Background="#95A5A6" Foreground="White" FontWeight="Bold" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="3" Color="#EAEAEA"/>
            </Border.Effect>

            <DockPanel>
                <TextBlock Text="Usuarios del Sistema" DockPanel.Dock="Top" FontSize="18" FontWeight="Bold" Foreground="#34495E" Margin="10,0,0,20"/>

                <DataGrid ItemsSource="{Binding ListaUsuarios}" SelectedItem="{Binding UsuarioSeleccionado}"
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="0" RowHeight="50"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F0F0F0" HeadersVisibility="Column" Background="White">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#95A5A6"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding NombreCompleto}" Width="*"/>
                        <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="1.5*"/>

                        <DataGridTemplateColumn Header="Rol" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#ECF0F1" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Rol}" Foreground="#7F8C8D" FontWeight="Bold" FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Estado}" Width="60"/>

                        <DataGridTemplateColumn Header="Acción" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                            CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Dar de baja">
                                        <TextBlock Text="⛔" Foreground="#C0392B" FontSize="16"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>