<UserControl x:Class="CapaPresentacion_WPF.Vistas.VistaPeliculas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100" Background="#F0F0F0">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="BotonEstilo" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="TextBoxEstilo" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Gestión de Películas" FontSize="24" FontWeight="Bold" Foreground="#333"/>

            <TextBlock Text=" Cargando..." Foreground="Orange" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0"
                       Visibility="{Binding EstaCargando, Converter={StaticResource BoolToVis}}"/>
        </StackPanel>

        <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent">

            <TabItem Header="Mis Películas" FontSize="14">
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
                        <ItemsControl ItemsSource="{Binding PeliculasLocales}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="160" Height="280" Margin="10" Background="White" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Source="{Binding PosterUrl}" Stretch="UniformToFill" Margin="2"/>

                                            <Border Background="Black" Opacity="0.7" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" CornerRadius="3" Padding="5,2">
                                                <TextBlock Text="{Binding Clasificacion}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                            </Border>

                                            <StackPanel Grid.Row="1" Margin="5">
                                                <TextBlock Text="{Binding Titulo}" FontWeight="Bold" TextTrimming="CharacterEllipsis" ToolTip="{Binding Titulo}"/>
                                                <TextBlock Text="{Binding DuracionMinutos, StringFormat='Duración: {0} min'}" FontSize="11" Foreground="Gray"/>
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                                                <Button Content="Editar" FontSize="10" Padding="5,2" Margin="2" Background="#EEE" Foreground="Black"
                                                        Command="{Binding DataContext.SeleccionarPeliculaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>          

                                                <Button Content="Borrar" FontSize="10" Padding="5,2" Margin="2" Background="#FFCDD2" Foreground="#D32F2F"
                                                        Command="{Binding DataContext.EliminarPeliculaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Border Grid.Column="1" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="15" VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="Editar Película" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PeliculaSeleccionada}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBlock Text="Título:"/>
                                <TextBox Text="{Binding PeliculaSeleccionada.Titulo, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBoxEstilo}"/>

                                <TextBlock Text="Sinopsis:"/>
                                <TextBox Text="{Binding PeliculaSeleccionada.Sinopsis}" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Style="{StaticResource TextBoxEstilo}"/>

                                <TextBlock Text="Duración (min):"/>
                                <TextBox Text="{Binding PeliculaSeleccionada.DuracionMinutos}" Style="{StaticResource TextBoxEstilo}"/>

                                <TextBlock Text="Clasificación:"/>
                                <TextBox Text="{Binding PeliculaSeleccionada.Clasificacion}" Style="{StaticResource TextBoxEstilo}"/>

                                <Button Content="GUARDAR CAMBIOS" Command="{Binding GuardarEdicionCommand}" Style="{StaticResource BotonEstilo}"/>
                            </StackPanel>

                            <TextBlock Text="Selecciona una película de la izquierda para editarla." TextWrapping="Wrap" Foreground="Gray" FontStyle="Italic" Margin="0,20,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PeliculaSeleccionada}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Importar de Internet (TMDB)" FontSize="14">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="Buscar:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Width="300" Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" Padding="5"/>
                        <Button Content="BUSCAR" Command="{Binding BuscarCommand}" Style="{StaticResource BotonEstilo}" Margin="10,0,0,0"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding ResultadosBusqueda}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="150" Margin="10" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="220"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Source="{Binding FullPosterUrl}" Stretch="UniformToFill"/>

                                            <TextBlock Grid.Row="1" Text="{Binding Titulo}" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center" Margin="5" FontSize="11"/>

                                            <Button Grid.Row="2" Content="⬇ IMPORTAR" Background="#4CAF50"  Margin="5" Padding="5" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                                    Command="{Binding DataContext.AgregarPeliculaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>