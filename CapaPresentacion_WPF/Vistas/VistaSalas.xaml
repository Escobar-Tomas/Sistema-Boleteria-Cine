<UserControl x:Class="CapaPresentacion_WPF.Vistas.VistaSalas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapaPresentacion_WPF.Vistas"
             xmlns:vm="clr-namespace:CapaPresentacion_WPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:GestionSalasViewModel}"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F8F9FA" CornerRadius="10" Padding="15" Margin="0,0,20,0">
            <StackPanel>
                <TextBlock Text="DETALLE DE SALA" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

                <TextBlock Text="Nombre de la Sala" Margin="0,10,0,5" FontWeight="SemiBold"/>
                <TextBox Text="{Binding SalaSeleccionada.Nombre, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="Filas" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding Filas, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="Columnas" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding Columnas, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Vista Previa de Capacidad" Margin="0,20,0,5" FontWeight="SemiBold" Foreground="#7F8C8D"/>
                <Border Background="White" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Filas}" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text=" x " FontSize="16" Foreground="Gray"/>
                            <TextBlock Text="{Binding Columnas}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                        <Separator Margin="0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CapacidadCalculada}" FontSize="24" FontWeight="Bold" Foreground="#27AE60"/>
                            <TextBlock Text=" butacas" VerticalAlignment="Bottom" Margin="5,0,0,4" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TextBlock Text="Estado" Margin="0,15,0,5" FontWeight="SemiBold"/>
                <CheckBox Content="Activa" IsChecked="{Binding SalaSeleccionada.Estado}" VerticalContentAlignment="Center"/>

                <Button Content="GUARDAR SALA" Command="{Binding GuardarCommand}" Margin="0,30,0,5" Background="#2980B9" Foreground="White" FontWeight="Bold" Height="40" Cursor="Hand"/>
                <Button Content="LIMPIAR" Command="{Binding LimpiarCommand}" Background="Transparent" BorderBrush="#95A5A6" Foreground="#7F8C8D" Height="30" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="LISTADO DE SALAS" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

            <DataGrid Grid.Row="1" ItemsSource="{Binding ListaSalas}" SelectedItem="{Binding SalaSeleccionada}" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Background="White" BorderThickness="1" BorderBrush="#DEE2E6" RowHeight="35" ColumnHeaderHeight="40">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="SALA" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="FILAS" Binding="{Binding Filas}" Width="80"/>
                    <DataGridTextColumn Header="COLUMNAS" Binding="{Binding Columnas}" Width="80"/>
                    <DataGridTextColumn Header="CAPACIDAD" Binding="{Binding Capacidad}" Width="100"/>

                    <DataGridTemplateColumn Header="ESTADO" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border x:Name="EstadoBadge" CornerRadius="10" Padding="8,2" HorizontalAlignment="Center">
                                    <TextBlock x:Name="EstadoText" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Estado}" Value="True">
                                        <Setter TargetName="EstadoBadge" Property="Background" Value="#27AE60"/>
                                        <Setter TargetName="EstadoText" Property="Text" Value="ACTIVO"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Estado}" Value="False">
                                        <Setter TargetName="EstadoBadge" Property="Background" Value="#E74C3C"/>
                                        <Setter TargetName="EstadoText" Property="Text" Value="INACTIVO"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>