<UserControl x:Class="CapaPresentacion_WPF.Vistas.VistaFunciones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900" Background="White">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F8F9FA" Padding="20" CornerRadius="8" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="📅 Programar Función" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2C3E50"/>

                <TextBlock Text="Película:" Foreground="Gray"/>
                <ComboBox ItemsSource="{Binding ListaPeliculas}" 
                          SelectedItem="{Binding PeliculaSeleccionada}"
                          DisplayMemberPath="Titulo"
                          Margin="0,5,0,15" Padding="5"/>

                <TextBlock Text="Sala:" Foreground="Gray"/>
                <ComboBox ItemsSource="{Binding ListaSalas}" 
                          SelectedItem="{Binding SalaSeleccionada}"
                          DisplayMemberPath="Nombre"
                          Margin="0,5,0,15" Padding="5"/>

                <TextBlock Text="Fecha:" Foreground="Gray"/>
                <DatePicker SelectedDate="{Binding FechaEntrada}" Margin="0,5,0,15"/>

                <TextBlock Text="Hora Inicio (HH:mm):" Foreground="Gray"/>
                <TextBox Text="{Binding HoraEntrada}" Padding="8" Margin="0,5,0,15"/>

                <TextBlock Text="Precio del Ticket:" Foreground="Gray"/>
                <TextBox Text="{Binding PrecioEntrada}" Padding="8" Margin="0,5,0,20"/>

                <Button Content="Guardar Función" Command="{Binding GuardarCommand}"
                        Padding="10" Background="#27AE60" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Margin="20,0,0,0">
            <DockPanel>
                <TextBlock Text="Cartelera Actual (Próximas Funciones)" DockPanel.Dock="Top" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <DataGrid ItemsSource="{Binding ListaFunciones}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal" RowHeight="40" BorderBrush="#E0E0E0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding FechaHoraInicio, StringFormat=dd/MM/yyyy}" Width="90"/>
                        <DataGridTextColumn Header="Hora" Binding="{Binding FechaHoraInicio, StringFormat=HH:mm}" Width="60" FontWeight="Bold"/>

                        <DataGridTextColumn Header="Película" Binding="{Binding Pelicula.Titulo}" Width="*"/>
                        <DataGridTextColumn Header="Sala" Binding="{Binding Sala.Nombre}" Width="100"/>

                        <DataGridTextColumn Header="Precio" Binding="{Binding PrecioTicket, StringFormat=C}" Width="80"/>

                        <DataGridTemplateColumn Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="❌" ToolTip="Cancelar Función"
                                            Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}"
                                            Background="Transparent" Foreground="Red" BorderThickness="0" FontSize="14"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>