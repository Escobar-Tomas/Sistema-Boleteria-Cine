<UserControl x:Class="CapaPresentacion_WPF.Vistas.VistaFunciones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000" Background="Transparent">

    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,20,0" VerticalAlignment="Top" Padding="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="3" Color="#EAEAEA"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" BorderThickness="0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                        <TextBlock Text="🕒" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="Programar Función" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Película" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding ListaPeliculas}" SelectedItem="{Binding PeliculaSeleccionada}"
                              DisplayMemberPath="Titulo" Margin="0,0,0,15" Height="40" Padding="10" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Sala" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding ListaSalas}" SelectedItem="{Binding SalaSeleccionada}"
                              DisplayMemberPath="Nombre" Margin="0,0,0,15" Height="40" Padding="10" VerticalContentAlignment="Center"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Fecha" Style="{StaticResource LabelStyle}"/>
                            <DatePicker SelectedDate="{Binding FechaEntrada}" Height="40" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Hora (HH:mm)" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding HoraEntrada}" Height="40" VerticalContentAlignment="Center" Padding="10" Background="#F5F6FA" BorderBrush="#DCDDE1" BorderThickness="1"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Precio del Ticket ($)" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding PrecioEntrada}" Height="40" VerticalContentAlignment="Center" Padding="10" 
                             Background="#F5F6FA" BorderBrush="#DCDDE1" BorderThickness="1" Margin="0,0,0,25"/>

                    <Button Command="{Binding GuardarCommand}" Content="GUARDAR FUNCIÓN" 
                            Height="45" Background="#3498DB" Foreground="White" FontWeight="Bold" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="3" Color="#EAEAEA"/>
            </Border.Effect>

            <DockPanel>
                <TextBlock Text="Cartelera (Funciones Activas)" DockPanel.Dock="Top" 
                           FontSize="18" FontWeight="Bold" Foreground="#34495E" Margin="10,0,0,20"/>

                <DataGrid ItemsSource="{Binding ListaFunciones}" AutoGenerateColumns="False" 
                          CanUserAddRows="False" IsReadOnly="True" BorderThickness="0" RowHeight="50"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F0F0F0" HeadersVisibility="Column" Background="White">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#95A5A6"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding FechaHoraInicio, StringFormat=dd/MM/yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Hora" Binding="{Binding FechaHoraInicio, StringFormat=HH:mm}" Width="80" FontWeight="Bold"/>

                        <DataGridTemplateColumn Header="Película" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Pelicula.Titulo}" FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center" Margin="5,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Sala" Binding="{Binding Sala.Nombre}" Width="100"/>
                        <DataGridTextColumn Header="Precio" Binding="{Binding PrecioTicket, StringFormat=C}" Width="100"/>

                        <DataGridTemplateColumn Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}"
                                            ToolTip="Cancelar Función" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                        <TextBlock Text="✕" Foreground="#E74C3C" FontWeight="Bold" FontSize="16"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>