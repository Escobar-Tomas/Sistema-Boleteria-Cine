<UserControl x:Class="CapaPresentacion_WPF.Vistas.VistaVentas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             x:Name="Root">

    <Grid Background="#F4F4F4" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Funciones del día:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="16"/>
                    <DatePicker SelectedDate="{Binding FechaVenta}" Width="120" VerticalContentAlignment="Center"/>
                    <Button Content="Actualizar" Command="{Binding CargarFuncionesCommand}" Margin="10,0,0,0" Padding="10,5" Background="#007ACC" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FuncionesDelDia}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="200" Margin="0,0,15,15" Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="280"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Image Source="{Binding Pelicula.PosterUrl}" Stretch="UniformToFill" Margin="2"/>

                                    <Border Background="#CC000000" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="8" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding FechaHoraInicio, StringFormat=HH:mm}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                    </Border>

                                    <StackPanel Grid.Row="1" Margin="10">
                                        <TextBlock Text="{Binding Pelicula.Titulo}" FontWeight="Bold" TextTrimming="CharacterEllipsis" ToolTip="{Binding Pelicula.Titulo}"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Sala.Nombre}" FontSize="12" Foreground="Gray"/>
                                            <TextBlock Text=" • " Foreground="Gray"/>
                                            <TextBlock Text="{Binding Formato}" FontSize="12" FontWeight="Bold" Foreground="#007ACC"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Idioma}" FontSize="11" Foreground="Gray" Margin="0,2,0,5"/>

                                        <Button Content="SELECCIONAR" Command="{Binding DataContext.SeleccionarFuncionCommand, ElementName=Root}" 
                                                CommandParameter="{Binding}"
                                                Background="#EEE" Foreground="#333" BorderThickness="0" Margin="0,5,0,0" Cursor="Hand"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" BorderBrush="#DDD" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Resumen de Venta" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Película:" Foreground="Gray" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding FuncionSeleccionada.Pelicula.Titulo, TargetNullValue='Seleccione una función'}" 
                           FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,15"/>

                <TextBlock Text="Horario:" Foreground="Gray" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding FuncionSeleccionada.FechaHoraInicio, StringFormat='dd/MM/yyyy - HH:mm hs', TargetNullValue='--/--/---- --:--'}" 
                           FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Text="Sala y Formato:" Foreground="Gray" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="{Binding FuncionSeleccionada.Sala.Nombre, TargetNullValue='---'}" FontWeight="Bold"/>
                    <TextBlock Text=" ("/>
                    <TextBlock Text="{Binding FuncionSeleccionada.Formato, TargetNullValue='-'}" Foreground="#007ACC"/>
                    <TextBlock Text=")"/>
                </StackPanel>

                <TextBlock Text="Método de Pago:" Foreground="Gray" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding ListaMetodosPago}" 
                          SelectedItem="{Binding MetodoPago}"
                          Height="35" VerticalContentAlignment="Center" Padding="10,0"
                          Background="#FAFAFA" BorderBrush="#DDD">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Padding" Value="10"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>

                <Separator Margin="0,15,0,15"/>

                <TextBlock Text="Total a Pagar:"/>

                <Separator Margin="0,10,0,20"/>

                <TextBlock Text="Precio por Ticket:" Foreground="Gray" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding FuncionSeleccionada.PrecioTicket, StringFormat='${0:N0}', TargetNullValue='$0'}" 
                           FontSize="28" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <Button Content="ELEGIR ASIENTOS" Command="{Binding IniciarVentaCommand}" 
                        Height="50" FontSize="16" FontWeight="Bold" Background="#2C3E50" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FuncionSeleccionada}" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Opacity" Value="0.5"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock Text="* Seleccione una función de la lista para continuar." 
                           Foreground="Red" FontSize="11" TextAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FuncionSeleccionada}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>