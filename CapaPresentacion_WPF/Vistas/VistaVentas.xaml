<UserControl x:Class="CapaPresentacion_WPF.Vistas.VistaVentas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             x:Name="Root">

    <Grid Background="#F4F4F4" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Funciones del día:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="16"/>
                    <DatePicker SelectedDate="{Binding FechaVenta}" Width="120" VerticalContentAlignment="Center"/>
                    <Button Content="Actualizar" Command="{Binding CargarFuncionesCommand}" Margin="10,0,0,0" Padding="10,5" Background="#007ACC" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FuncionesDelDia}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="200" Margin="0,0,15,15" Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="280"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Image Source="{Binding Pelicula.PosterUrl}" Stretch="UniformToFill" Margin="2"/>

                                    <Border Background="#CC000000" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="8" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding FechaHoraInicio, StringFormat=HH:mm}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                    </Border>

                                    <StackPanel Grid.Row="1" Margin="10">
                                        <TextBlock Text="{Binding Pelicula.Titulo}" FontWeight="Bold" TextTrimming="CharacterEllipsis" ToolTip="{Binding Pelicula.Titulo}"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Sala.Nombre}" FontSize="12" Foreground="Gray"/>
                                            <TextBlock Text=" • " Foreground="Gray"/>
                                            <TextBlock Text="{Binding Formato}" FontSize="12" FontWeight="Bold" Foreground="#007ACC"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Idioma}" FontSize="11" Foreground="Gray" Margin="0,2,0,5"/>

                                        <Button Content="SELECCIONAR" Command="{Binding DataContext.SeleccionarFuncionCommand, ElementName=Root}" 
                                                CommandParameter="{Binding}"
                                                Background="#EEE" Foreground="#333" BorderThickness="0" Margin="0,5,0,0" Cursor="Hand"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Border Grid.Column="1" Margin="10,0,0,0" Background="White" CornerRadius="8" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#DDD" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Resumen de Venta" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="Película:" Foreground="#777" FontSize="12"/>
                    <TextBlock Text="{Binding FuncionSeleccionada.Pelicula.Titulo, TargetNullValue='Seleccione una función'}" 
                       FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <TextBlock Text="Horario:" Foreground="#777" FontSize="12"/>
                    <TextBlock Text="{Binding FuncionSeleccionada.HoraInicio, StringFormat='{}{0:hh\\:mm tt}'}" 
                       FontSize="14" Margin="0,0,0,10"/>

                    <TextBlock Text="Sala:" Foreground="#777" FontSize="12"/>
                    <TextBlock Text="{Binding FuncionSeleccionada.Sala.Nombre}" 
                       FontSize="14" Margin="0,0,0,10"/>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="Asientos Seleccionados:" Foreground="#777" FontSize="12"/>
                    <TextBlock Text="{Binding TextoAsientosSeleccionados}" 
                       FontSize="14" FontWeight="Bold" Foreground="#2C3E50" TextWrapping="Wrap" Margin="0,0,0,10"/>

                    <TextBlock Text="Método de Pago:" Foreground="#777" FontSize="12" Margin="0,10,0,0"/>
                    <ComboBox ItemsSource="{Binding ListaMetodosPago}" 
                      SelectedItem="{Binding MetodoPago}"
                      Margin="0,5,0,0" Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                    <DockPanel LastChildFill="False" Margin="0,0,0,15">
                        <TextBlock Text="TOTAL:" DockPanel.Dock="Left" FontSize="18" FontWeight="Bold" VerticalAlignment="Bottom"/>
                        <TextBlock Text="{Binding TotalVenta, StringFormat='${0:N0}'}" DockPanel.Dock="Right" FontSize="24" FontWeight="Bold" Foreground="#27AE60"/>
                    </DockPanel>

                    <Button Command="{Binding IniciarSeleccionCommand}" 
                    Content="Seleccionar Asientos" 
                    Background="#3498DB" Foreground="White"
                    Margin="0,0,0,10" Height="40"/>

                    <Button Command="{Binding ConfirmarVentaCommand}" 
                    Content="CONFIRMAR VENTA" 
                    Background="#27AE60" Foreground="White" FontWeight="Bold"
                    Height="50" FontSize="16">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                        <Setter Property="Background" Value="#95A5A6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>