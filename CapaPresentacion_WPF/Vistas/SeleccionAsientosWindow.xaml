<Window x:Class="CapaPresentacion_WPF.Vistas.SeleccionAsientosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Selección de Butacas" Height="650" Width="800" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1A1A1D">

    <Window.Resources>
        <Style x:Key="EstiloButaca" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8,8,4,4" 
                                Margin="4"
                                BorderBrush="#101010" BorderThickness="0,0,2,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <Border Height="8" Background="#404040" CornerRadius="4" Margin="50,0" VerticalAlignment="Top">
                <Border.Effect>
                    <DropShadowEffect Color="#3498DB" BlurRadius="20" ShadowDepth="5" Direction="270" Opacity="0.5"/>
                </Border.Effect>
            </Border>
            <TextBlock Text="PANTALLA" Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12"/>
        </StackPanel>

        <Viewbox Grid.Row="1" Stretch="Uniform" Margin="20">
            <ItemsControl ItemsSource="{Binding ListaAsientos}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="{Binding Filas}" Columns="{Binding Columnas}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding ToggleSelectionCommand}" 
                                Style="{StaticResource EstiloButaca}"
                                Background="{Binding BackgroundColor}"
                                Width="45" Height="45"
                                ToolTip="{Binding Codigo}">

                            <Grid>
                                <Border BorderBrush="White" BorderThickness="0,0,0,1" Opacity="0.2" VerticalAlignment="Top" Height="10" Margin="5,5,5,0"/>
                                <TextBlock Text="{Binding Codigo}" 
                                           Foreground="{Binding ForegroundColor}" 
                                           FontSize="10" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Viewbox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Border Width="15" Height="15" Background="#3498DB" CornerRadius="3" Margin="0,0,5,0"/>
            <TextBlock Text="Disponible" Foreground="White" Margin="0,0,20,0" VerticalAlignment="Center"/>

            <Border Width="15" Height="15" Background="#2ECC71" CornerRadius="3" Margin="0,0,5,0"/>
            <TextBlock Text="Seleccionado" Foreground="White" Margin="0,0,20,0" VerticalAlignment="Center"/>

            <Border Width="15" Height="15" Background="#E74C3C" CornerRadius="3" Margin="0,0,5,0"/>
            <TextBlock Text="Ocupado" Foreground="White" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="3" Background="#252525" CornerRadius="10" Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding ResumenSeleccion}" Foreground="#AAAAAA" FontSize="14"/>
                    <TextBlock Text="{Binding Total, StringFormat='Total a Pagar: ${0:N0}'}" Foreground="White" FontSize="24" FontWeight="Bold"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="CONFIRMAR COMPRA" 
                        Command="{Binding ConfirmarCommand}" 
                        Background="#27AE60" Foreground="White" FontWeight="Bold" FontSize="14"
                        Padding="25,10"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>