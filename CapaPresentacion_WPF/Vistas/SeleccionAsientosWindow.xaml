<Window x:Class="CapaPresentacion_WPF.Vistas.SeleccionAsientosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar Asientos" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Background="Black" Margin="50,0,50,10" CornerRadius="5">
            <TextBlock Text="PANTALLA" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding ListaAsientos}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{Binding Filas}" Columns="{Binding Columnas}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding ClickCommand}" Margin="2" Background="{Binding Color}">
                        <TextBlock Text="{Binding Codigo}" Foreground="White" FontWeight="Bold"/>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock Text="{Binding ResumenSeleccion}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <TextBlock Text="{Binding Total, StringFormat=Total: {0:C}}" VerticalAlignment="Center" Margin="0,0,20,0" FontSize="16"/>
            <Button Content="Confirmar Compra" Command="{Binding ConfirmarCommand}" Padding="15,5" Background="#007ACC" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>