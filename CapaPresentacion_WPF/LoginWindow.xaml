<Window x:Class="CapaPresentacion_WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acceso al Sistema" Height="446" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style TargetType="Control" x:Key="InputStyle">
            <Setter Property="Background" Value="#F5F6FA"/>
            <Setter Property="BorderBrush" Value="#DCDDE1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="15" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="5" Color="#DDDDDD"/>
        </Border.Effect>

        <Grid Margin="30">
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="🎬" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="CINE SYSTEM" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2C3E50"/>
                <TextBlock Text="Bienvenido de nuevo" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,5,0,30" FontSize="14"/>

                <TextBlock Text="Correo Electrónico" Foreground="#34495E" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtCorreo" Style="{StaticResource InputStyle}" Margin="0,0,0,15"/>

                <TextBlock Text="Contraseña" Foreground="#34495E" FontWeight="SemiBold" Margin="0,0,0,5"/>

                <Grid Margin="0,0,0,25">
                    <PasswordBox x:Name="txtClave" 
                                 Style="{StaticResource InputStyle}"
                                 PasswordChar="●"
                                 Margin="0,0,0,0"
                                 PasswordChanged="txtClave_PasswordChanged"/>

                    <TextBox x:Name="txtClaveVisible" 
                             Style="{StaticResource InputStyle}"
                             Visibility="Collapsed"
                             TextChanged="txtClaveVisible_TextChanged"/>

                    <ToggleButton x:Name="btnTogglePass" 
                                  Width="30" Height="30" 
                                  HorizontalAlignment="Right" Margin="0,0,5,0"
                                  Background="Transparent" BorderThickness="0"
                                  Cursor="Hand" Click="btnTogglePass_Click">
                        <TextBlock Text="👁️" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </ToggleButton>
                </Grid>

                <Button Content="INGRESAR" Click="btnIngresar_Click" IsDefault="True"
                        Height="49" Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="14" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</Window>