<Window x:Class="CapaPresentacion_WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acceso al Sistema" Height="350" Width="300" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">

    <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="10">
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="CINE SYSTEM" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333"/>
            <TextBlock Text="Inicie sesión para continuar" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Correo:"/>
            <TextBox x:Name="txtCorreo" Padding="5" Margin="0,5,0,10" Text="admin@cine.com"/>

            <TextBlock Text="Contraseña:"/>
            <PasswordBox x:Name="txtClave" Padding="5" Margin="0,5,0,20"/>

            <Button Content="INGRESAR" Click="btnIngresar_Click" 
                    Background="#007ACC" Foreground="White" FontWeight="Bold" Padding="10" Cursor="Hand"/>

            <Button Content="Salir" Click="btnSalir_Click" 
                    Background="Transparent" BorderThickness="0" Foreground="Red" Margin="0,10,0,0" Cursor="Hand"/>
        </StackPanel>
    </Border>
</Window>